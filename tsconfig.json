{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
    ".eslintrc.cjs",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"],
  "extends": "astro/tsconfigs/base"
}
