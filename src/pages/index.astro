---
import { BugIcon } from "lucide-react";
import { buttonVariants } from "@components/ui/button";

import MainLayout from "@/layouts/main-layout.astro";
import { cn } from "@/lib/utils";

const page = {
  title: "hi, I'm Harold",
  description: "I catch bugs for a living",
};

const navLinks = [
  { href: "/blogs", label: "blogs", icon: "📝" },
  { href: "/showcase", label: "showcase", icon: "📚" },
  { href: "/contact", label: "contact", icon: "📞" },
];
---

<MainLayout title={page.title} description={page.description}>
  <div
    class="prose mt-[15%] flex max-w-full flex-col items-start justify-center gap-0 dark:prose-invert"
  >
    <h1>🐞 hi, i'm Harold</h1>
    <p class="text-large font-bold">
      i catch <span class="mx-1 mb-1 inline-block align-middle"
        ><BugIcon className="h-4 w-4" /></span
      > for a living
    </p>
    <p>find more bugs ahead</p>
    <div class="flex flex-row gap-1">
      {
        navLinks.map(({ href, label, icon }) => (
          <a
            href={href}
            class={cn(
              buttonVariants({ variant: "outline" }),
              "flex h-20 w-20 flex-col items-center justify-center gap-1 no-underline",
            )}
          >
            <span transition:name={`${label}-icon`}>{icon}</span>
            <span transition:name={`${label}-title`}>{label}</span>
          </a>
        ))
      }
    </div>
  </div>
</MainLayout>
