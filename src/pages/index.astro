---
import { BugIcon } from "lucide-react";
import { buttonVariants } from "@components/ui/button";
import MainLayout from "@/layouts/main-layout.astro";
import { cn } from "@/lib/utils";

const page = {
  title: "hi, I'm Harold",
  description: "I catch bugs for a living",
};
---

<MainLayout title={page.title} description={page.description}>
  <div
    class="prose mt-[15%] flex max-w-full flex-col items-start justify-center gap-0 dark:prose-invert"
  >
    <h1>üêû hi, i'm Harold</h1>
    <p class="text-large font-bold">
      i catch <span class="mx-1 mb-1 inline-block align-middle"
        ><BugIcon className="h-4 w-4" /></span
      > for a living
    </p>
    <p>find more bugs ahead</p>
    <div class="flex flex-row gap-1">
      <a
        href="/blogs"
        class={cn(buttonVariants({ variant: "outline" }), "no-underline")}
      >
        <BugIcon className="mr-2 h-4 w-4" /> blogs
      </a>
      <a
        href="/showcase"
        class={cn(buttonVariants({ variant: "outline" }), "no-underline")}
      >
        <BugIcon className="mr-2 h-4 w-4" /> showcase
      </a>
      <a
        href="/contact"
        class={cn(buttonVariants({ variant: "outline" }), "no-underline")}
      >
        <BugIcon className="mr-2 h-4 w-4" /> contact
      </a>
    </div>
  </div>
</MainLayout>
